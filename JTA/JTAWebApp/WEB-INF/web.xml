<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>

  <display-name>JTAWebapp</display-name>
  <description>WEbapp Testing JTA features</description>

  <servlet>
    <servlet-name>JTATestServlet</servlet-name>
    <display-name>Tests the JTA distributed transaction capabilites</display-name>
    <servlet-class>com.amitk.j2ee.jta.JTATestServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>JTATestServlet</servlet-name>
    <url-pattern>/JTATestServlet</url-pattern>
  </servlet-mapping>


  <welcome-file-list>
    <welcome-file>/index.html</welcome-file>
  </welcome-file-list>

</web-app>
